                                                              <a class="btn btn-danger btn-xs" style="margin-left:5px;" data-original-title="btn btn-danger btn-xs" onclick="deleteConfirm('@data.Id')">Delete</a>
                                                        </div>
                                                    </td>
                                                   
                                                </tr>
                                                SrNo++;
                                            }
                                        }
                                    }

                                    else
                                    {
                                        <tr>
                                            <td>No record found...</td>
