
@using InstituteManagement_Models.Subscriptions;

@model Plans



<div class=" register">
    <div class="row">
        <div class="col-md-3 register-left">

            <button class="btn btn-success btn-lg" asp-action="ShowPlans" asp-controller="Institute" type="submit">View All Plans</button>
        </div>

        <div class="col-md-8 register-right">
            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                <h3 class="register-heading">Plan Details</h3>
                <form id="registerForm" asp-action="SubscribePlan" asp-controller="Subscriptions" asp-route-itemid="@Model.PlanID" method="post">
                    <div class="row register-form">
                        <div class="col-md-12 register-right">
                         
                            <div class="form-group">
                                <label class="form-lable">Plan Name</label>
                                <input type="text" class="form-control" placeholder="Plan Name" asp-for="@Model.PlanName" readonly/>
                                <span asp-validation-for="@Model.PlanName"></span>
                            </div>
                            <div class="form-group">
                                <label class="form-lable">Plan Description</label>
                                <input type="text" class="form-control" placeholder="Descriptions *" asp-for="@Model.PlanDescription" readonly />
                                <span asp-validation-for="@Model.PlanDescription"></span>
                            </div>

                            <div class="form-group">
                                <label class="form-lable">Plan Features</label>
                                <input type="email" class="form-control" placeholder="Plan Features *" asp-for="@Model.Features" readonly/>
                                <span asp-validation-for="@Model.Features"></span>
                            </div>
                            <div class="form-group">
                                <label class="form-lable">Plan Duration</label>
                                <input type="text" class="form-control" placeholder="Plan Duration" asp-for="@Model.Duration" readonly/>
                                <span asp-validation-for="@Model.Duration"></span>
                            </div>
                            
                            <div class="form-group">
                                <label class="form-lable">Plan Price</label>
                                <input class="form-control" placeholder="Price" asp-for="@Model.Price" readonly/>
                                <span asp-validation-for="@Model.Price"></span>
                            </div>
                            <div class="form-group">
                                <label class="form-lable">Discount On Plan</label>
                                <input class="form-control" placeholder="Confirm Password *" asp-for="@Model.Discount" />
                                <span asp-validation-for="@Model.Discount"></span>
                            </div>

                            <button id="registerSubmit"   class="w-100 btn btn-lg btn-primary">Subscribe Now</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>



    </div>
</div>


